{
  "endOfLine": "lf",
  "semi": true,
  "singleQuote": false,
  "printWidth": 120,
  "tabWidth": 2,
  "trailingComma": "es5",
  "importOrder": [
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "^(next-intl/(.*)$)|^(next-intl$)",
    "",
    "^@/src/app/(.*)$",
    "^@/src/assets/(.*)$",
    "^@/src/components/(.*)$",
    "^@/src/lib/(.*)$",
    "^@/src/models/(.*)$",
    "^@/src/store/(.*)$",
    "^@/src/utils/(.*)$",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^types$",
    "",
    "^[./]"
  ],
  "plugins": ["@ianvs/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
